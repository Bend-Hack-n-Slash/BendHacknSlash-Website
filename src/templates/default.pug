doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, maximum-scale=1")
    title #{site.title} - #{title}
    include scripts.pug
    include stylesheets.pug
  body
    header
        include header.pug
        include menu.pug
    
    div(id="wrapper")
        div(class="content")
            !=contents

        include sidebar.pug

    include footer.pug
